<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    >

    <SurfaceView
        android:id="@+id/sv_ringing"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/sv_ringing"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tv_caller_ringring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_answer_call_ringring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4dd862"
            android:height="90dp"
            android:text="@string/answer"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:width="150dp" />

        <Button
            android:id="@+id/btn_end_call_ringring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#ff3b2f"
            android:height="90dp"
            android:text="@string/hang_up"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:width="150dp" />
    </LinearLayout>

</RelativeLayout>